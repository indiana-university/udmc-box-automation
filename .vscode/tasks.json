{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "windows": {
                "command": "Get-ChildItem .\\ -include bin,obj -Recurse | foreach ($_) { remove-item $_.fullname -Force -Recurse }"
            },
            "osx": {
                "command": "find . -iname \"bin\" -o -iname \"obj\" | xargs rm -rf"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "dependsOn": "Clean",
            "command": "dotnet publish --configuration Release",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Package",
            "dependsOn": "Publish",
            "osx": {
                "command": "zip -r publish.zip ./",
            },
            "windows": {
                "command": "\"C:\\Program Files\\7-Zip\\7z.exe\" a -r ./*",
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/bin/Release/netcoreapp2.2/publish"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish to Test",
            "dependsOn": "Package",
            "command": "az functionapp deployment source config-zip --resource-group udmc-box-automation-test --name udmc-box-automation-test --src publish.zip",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/bin/Release/netcoreapp2.2/publish"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish to Prod",
            "dependsOn": "Package",
            "command": "az functionapp deployment source config-zip --resource-group uipo-apps --name udmc-box-automation-prod --src publish.zip",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/bin/Release/netcoreapp2.2/publish"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Restore",
            "command": "dotnet restore",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Start",
            "type": "shell",
            "dependsOn": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src/bin/Debug/netcoreapp2.2"
            },
            "command": "func host start",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "unit",
            "command": "dotnet test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}